                />

            <View
                android:layout_width="135dp"
                android:layout_height="1px"
                android:background="#737373"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="75dp"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>






