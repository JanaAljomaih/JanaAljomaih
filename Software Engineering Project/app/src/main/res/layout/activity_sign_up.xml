<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up "
        android:textColor="#9C27B0"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To HHR App"
        android:textColor="#878383"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.017" />

    <EditText
        android:id="@+id/SignPhone"
        android:drawablePadding="10dp"

        android:layout_width="285dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/baseline_call_24"
        android:ems="10"
        android:hint="phone number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUserName" />

    <EditText
        android:id="@+id/SignUserName"
        android:layout_width="285dp"
        android:layout_height="52dp"

        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/baseline_account_circle_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Full name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/SignId"
        android:layout_width="285dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/baseline_credit_card_24"
        android:ems="10"
        android:hint="National ID"
        android:drawablePadding="10dp"

        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignPhone" />

    <EditText
        android:id="@+id/SignPassword"
        android:layout_width="285dp"
        android:layout_height="0dp"

        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/baseline_admin_panel_settings_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignEmail"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/SignPasswordConform"
        android:layout_width="285dp"

        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/baseline_admin_panel_settings_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Conform Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignPassword"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/SignBtn"
        android:layout_width="194dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:drawablePadding="10dp"
        android:text="Sign up "

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignPasswordConform"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/LogLink"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:text="have an account! Log in"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignBtn"
        app:layout_constraintVertical_bias="0.348" />

    <EditText
        android:id="@+id/SignEmail"
        android:layout_width="285dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/baseline_attach_email_24"
        android:drawablePadding="10dp"
        android:drawingCacheQuality="auto"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignAge"
        tools:ignore="MissingConstraints,TextFields" />

    <EditText
        android:id="@+id/SignAge"
        android:layout_width="285dp"

        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/baseline_calendar_month_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="your Age"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignId" />


</androidx.constraintlayout.widget.ConstraintLayout>